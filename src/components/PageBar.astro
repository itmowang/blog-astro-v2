---
// 每页显示多少条

const {
  prev,
  next,
  total: totalPage, // 总页数
  current: curPage, // 当前页码
  isBar,
} = Astro.props;
 
---

<div class={"pagination-container" + (isBar ? " page-bar" : "")}>
  {
    prev.num > 0 && (
      <a href={prev.link} class="prev" title="上一页">
        {" "}
        上一页{" "}
      </a>
    )
  }
  {
    (
      <span class="pagination-info">
        第 {curPage} 页 / 共 {totalPage} 页
      </span>
    )
  }
  {
    next.num > 0 && (
      <a href={next.link} class="next" title="下一页">
        {" "}
        下一页{" "}
      </a>
    )
  }
</div>
